<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchStatsDisplay"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:maxHeight="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/betterbanana"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_matches_wins"
        android:layout_width="184dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="#ffffff"
        android:fontFamily="@font/anton"
        android:paddingLeft="6dp"
        android:text="Wins:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_matches_top3"
        app:layout_constraintEnd_toStartOf="@+id/textView_matches_winratio"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_matches_top5"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="#ffffff"
        android:fontFamily="@font/anton"
        android:paddingLeft="6dp"
        android:text="Top 5:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_matches_top10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_matches_top3" />

    <TextView
        android:id="@+id/textView_matches_winratio"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="#ffffff"
        android:fontFamily="@font/anton"
        android:paddingLeft="6dp"
        android:text="Win %:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_matches_top5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_matches_wins" />

    <TextView
        android:id="@+id/textView_matches_totalMatches"
        android:layout_width="368dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#000000"
        android:fontFamily="@font/anton"
        android:paddingLeft="6dp"
        android:text="Total Matches Played"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_matches_top3"
        android:layout_width="184dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="#ffffff"
        android:fontFamily="@font/anton"
        android:paddingLeft="6dp"
        android:text="Top 3:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_matches_top6"
        app:layout_constraintEnd_toStartOf="@+id/textView_matches_top5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_matches_top6"
        android:layout_width="184dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="#ffffff"
        android:fontFamily="@font/anton"
        android:paddingLeft="6dp"
        android:text="Top 6:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_matches_totalMatches"
        app:layout_constraintEnd_toStartOf="@+id/textView_matches_top10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_matches_top10"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="#ffffff"
        android:fontFamily="@font/anton"
        android:paddingLeft="6dp"
        android:text="Top 10:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_matches_totalMatches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_matches_top6" />

</android.support.constraint.ConstraintLayout>